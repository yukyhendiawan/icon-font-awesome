{
	"name": "icon-font-awesome",
	"version": "2.0.2",
	"description": "The Block Plugin: Icon Font Awesome allows you to easily add a Gutenberg block to select icons from the Font Awesome collection.",
	"author": "Yuky Hendiawan",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"WordPress",
		"plugin"
	],
	"homepage": "https://github.com/yukyhendiawan/icon-font-awesome",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yukyhendiawan/icon-font-awesome.git"
	},
	"bugs": {
		"url": "https://github.com/yukyhendiawan/icon-font-awesome/issues"
	},
	"type": "module",
	"main": "build/index.js",
	"dependencies": {
		"@wordpress/block-editor": "^12.23.0",
		"@wordpress/blocks": "^12.32.0",
		"@wordpress/components": "^27.3.0",
		"@wordpress/element": "^5.32.0",
		"@wordpress/i18n": "^4.55.0",
		"@wordpress/icons": "^9.46.0",
		"classnames": "^2.5.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@release-it/conventional-changelog": "^9.0.4",
		"@wordpress/scripts": "^30.7.0",
		"browser-sync": "^3.0.3",
		"gulp": "^5.0.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-rename": "^2.0.0",
		"gulp-sass": "^6.0.0",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-uglify": "^3.0.2",
		"husky": "^9.1.7",
		"lint-staged": "^15.3.0",
		"npm-check-updates": "^17.1.12",
		"npm-run-all": "^4.1.5",
		"postcss-scss": "^4.0.9",
		"prettier": "3.4.2",
		"release-it": "^17.11.0",
		"sort-keys": "^5.1.0",
		"sort-package-json": "^2.12.0",
		"lodash": "^4.17.21",
		"webpack-remove-empty-scripts": "^1.0.4"
	},
	"scripts": {
		"build": "wp-scripts build",
		"start": "wp-scripts start",
		"build:all": "gulp buildAll",
		"build:js": "gulp buildJS",
		"build:sass": "gulp buildSass",
		"check-updates": "ncu",
		"check:php:compatibility:56+": "./vendor/bin/phpcs -p . --standard=phpcs.xml --extensions=php --ignore=*/vendor/*,*/node_modules/*",
		"check:php:compatibility:wp:56+": "./vendor/bin/phpcs -p . --standard=phpcs.xml --extensions=php --ignore=*/vendor/*,*/node_modules/*",
		"dist": "bash ./bin/dist.sh",
		"lint": "npm-run-all lint:*",
		"lint:css:all": "wp-scripts lint-style",
		"lint:css:all:fix": "wp-scripts lint-style --fix",
		"lint:css:assets": "wp-scripts lint-style './assets/css/*.css'",
		"lint:css:assets:fix": "wp-scripts lint-style './assets/css/*.css' --fix",
		"lint:js": "wp-scripts lint-js",
		"lint:js:assets": "wp-scripts lint-js './assets/js/*.js'",
		"lint:js:assets:fix": "wp-scripts lint-js './assets/js/*.js' --fix",
		"lint:js:fix": "wp-scripts lint-js --fix",
		"lint:js:src": "wp-scripts lint-js './src/assets/js/*.js'",
		"lint:js:src:fix": "wp-scripts lint-js './src/assets/js/*.js' --fix",
		"lint:md:docs": "wp-scripts lint-md-docs README.md",
		"lint:pkg:json": "wp-scripts lint-pkg-json",
		"lint:scss:all": "wp-scripts lint-style",
		"lint:scss:all:fix": "wp-scripts lint-style --fix",
		"lint:scss:src": "wp-scripts lint-style './src/assets/scss/**/*.scss'",
		"lint:scss:src:fix": "wp-scripts lint-style './src/assets/scss/**/*.scss' --fix",
		"lint:wpcs": "./vendor/bin/phpcs --standard=phpcs.xml",
		"lint:wpcs:fix": "./vendor/bin/phpcbf --standard=phpcs.xml --report-summary --report-source",
		"prepare": "husky",
		"prettier:check": "npx prettier . --check",
		"prettier:write": "npx prettier . --write",
		"release": "release-it",
		"sort:composer": "node sortComposerJson.js",
		"sort:package": "node sortPackageJson.js",
		"update-packages": "ncu -u",
		"update-version": "bash ./bin/update-version.sh",
		"watch:all": "gulp watchFiles",
		"watch:js": "gulp watchJS",
		"watch:sass": "gulp watchSass"
	}
}
