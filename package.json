{
	"name": "icon-font-awesome",
	"version": "1.0.0",
	"description": "",
	"author": "Yuky Hendiawan",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"check-updates": "ncu",
		"update-packages": "ncu -u",
		"bundle": "dir-archiver --src . --dest ../icon-font-awesome/icon-font-awesome.zip --exclude ./node_modules ./vendor ./.git ./src .gitignore package-lock.json package.json README.md webpack.config.js",
		"build": "wp-scripts build",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:js:src": "wp-scripts lint-js ./src",
		"lint:js:src:fix": "wp-scripts lint-js ./src --fix",
		"start": "wp-scripts start",
		"update-pot": "wp i18n make-pot . languages/icon-font-awesome.pot --exclude=src"
	},
	"dependencies": {
		"@wordpress/block-editor": "^12.23.0",
		"@wordpress/blocks": "^12.32.0",
		"@wordpress/components": "^27.3.0",
		"@wordpress/element": "^5.32.0",
		"@wordpress/i18n": "^4.55.0",
		"@wordpress/icons": "^9.46.0",
		"classnames": "^2.5.1",
		"npm-check-updates": "^16.14.18"
	},
	"devDependencies": {
		"@wordpress/scripts": "^27.6.0",
		"dir-archiver": "^2.1.0",
		"git-commit-msg-linter": "^5.0.7",
		"lodash": "^4.17.21",
		"webpack-remove-empty-scripts": "^1.0.4"
	}
}
